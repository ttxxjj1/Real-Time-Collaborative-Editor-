{
  "name": "realtime-collaborative-editor",
  "version": "1.0.0",
  "description": "Advanced real-time collaborative text editor with operational transforms",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t collaborative-editor .",
    "docker:run": "docker run -p 3000:3000 collaborative-editor"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "yjs": "^13.6.8",
    "y-websocket": "^1.5.0",
    "uuid": "^9.0.1",
    "redis": "^4.6.10",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/express": "^4.17.20",
    "@types/ws": "^8.5.8",
    "@types/uuid": "^9.0.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.16",
    "@types/jest": "^29.5.7",
    "typescript": "^5.2.2",
    "tsx": "^3.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/realtime-collaborative-editor.git"
  },
  "keywords": [
    "collaborative-editing",
    "operational-transforms",
    "real-time",
    "websocket",
    "distributed-systems",
    "conflict-resolution",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
